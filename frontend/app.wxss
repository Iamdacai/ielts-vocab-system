/**app.wxss**/
page {
  background-color: #f5f5f5;
}

/* 全局样式 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.text {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

.button {
  background: #007AFF;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.button:active {
  background: #0062cc;
}

/* 颜色变量 */
.primary-color { color: #007AFF; }
.success-color { color: #4CD964; }
.warning-color { color: #FF9500; }
.error-color { color: #FF3B30; }