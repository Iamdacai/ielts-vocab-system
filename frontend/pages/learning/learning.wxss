/* pages/learning/learning.wxss */
.word-section {
  text-align: center;
  margin-bottom: 30rpx;
}

.word {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.phonetic {
  font-size: 28rpx;
  color: #666;
}

.definition-section, .example-section, .source-section {
  margin-bottom: 30rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.action-buttons .button {
  flex: 1;
  padding: 15rpx 10rpx;
  font-size: 24rpx;
}

.progress-indicator {
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  z-index: 999;
}

.loading {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
}